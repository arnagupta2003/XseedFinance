<%- include("layouts/header") -%>

<body>
  <!-- ============================================================== -->
  <!-- Preloader - style you can find in spinners.css -->
  <!-- ============================================================== -->
  <div class="preloader">
    <div class="lds-ripple">
      <div class="lds-pos"></div>
      <div class="lds-pos"></div>
    </div>
  </div>
  <!-- ============================================================== -->
  <!-- Main wrapper - style you can find in pages.scss -->
  <!-- ============================================================== -->
  <div
    id="main-wrapper"
    data-theme="light"
    data-layout="vertical"
    data-navbarbg="skin6"
    data-sidebartype="full"
    data-sidebar-position="fixed"
    data-header-position="fixed"
    data-boxed-layout="full"
  >
    <%- include("components/topbar") -%> <%- include("components/sidebar") -%>

    <div class="page-wrapper">
      <!-- ============================================================== -->
      <!-- Bread crumb and right sidebar toggle -->
      <!-- ============================================================== -->
      <div class="page-breadcrumb">
        <div class="row">
          <div class="col-7 align-self-center">
            <h4
              class="page-title text-truncate text-dark font-weight-medium mb-1"
            >
              Loan EMI Calculator
            </h4>

            <div class="d-flex align-items-center">
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb m-0 p-0">
                  <li
                    class="breadcrumb-item text-muted active"
                    aria-current="page"
                  >
                    Find your Loan EMI !
                  </li>

                  <li></li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </div>
      <!-- ============================================================== -->
      <!-- End Bread crumb and right sidebar toggle -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- Container fluid  -->
      <!-- ============================================================== -->
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-12 col-md-6">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">
                  Loan Amount
                  <span
                    style="
                      float: right;
                      font-weight: lighter;
                      background-color: rgb(231, 231, 231);
                      min-width: 120px;
                      padding: 5px 4px;
                      border-radius: 5px;
                    "
                    >â‚¹
                    <span id="displayFD" style="float: right"
                      >2500000</span
                    ></span
                  >
                </h4>

                <form class="mt-3">
                  <div class="form-group">
                    <input
                      type="range"
                      id="fixed_deposit"
                      class="form-control"
                      min="500000"
                      max="50000000"
                      step="5000"
                      value="2500000"
                      onchange="displayMonthly()"
                    />
                  </div>
                </form>
              </div>

              <div class="card-body">
                <h4 class="card-title">
                  Expected return rate (p.a)
                  <span
                    style="
                      float: right;
                      font-weight: lighter;
                      background-color: rgb(231, 231, 231);
                      min-width: 120px;
                      padding: 5px 4px;
                      border-radius: 5px;
                    "
                  >
                    <span id="displayRate" style="padding-left: 75px"
                      >7.55</span
                    >
                    <span style="float: right">%</span></span
                  >
                </h4>

                <form class="mt-3">
                  <div class="form-group">
                    <input
                      type="range"
                      id="return_rate"
                      class="form-control"
                      min="1"
                      max="30"
                      step="1"
                      value="7.55"
                      onchange="displayRate()"
                    />
                  </div>
                </form>
              </div>
              <div style="padding-bottom: 29px" class="card-body">
                <h4 class="card-title">
                  Tenure
                  <span
                    style="
                      float: right;
                      font-weight: lighter;
                      background-color: rgb(231, 231, 231);
                      min-width: 120px;
                      padding: 5px 4px;
                      border-radius: 5px;
                    "
                  >
                    <span id="displayTenure" style="padding-left: 40px"
                      >20 </span
                    ><span style="float: right" id="ym"></span
                  ></span>
                </h4>

                <form class="mt-3">
                  <div class="form-group">
                    <input
                      type="range"
                      id="tenure"
                      class="form-control"
                      min="1"
                      max="25"
                      step="1"
                      value="20"
                      onchange="displayTenure()"
                    />
                  </div>
                </form>
              </div>
            </div>
          </div>
          <div class="col-sm-12 col-md-6 col-lg-16">
            <div class="card">
              <div class="card-body">
                <canvas
                  id="myChart"
                  style="width: 100%; max-width: 600px"
                ></canvas>

                <div class="card-body pb-0">
                  <h4 style="color: black">
                    EMI :
                    <span style="font-weight: 500" id="ansEMI"></span>
                  </h4>
                  <h4 style="color: black">
                    Amount Invested :
                    <span style="font-weight: 500" id="ansLoan"></span>
                  </h4>
                  <h4 style="color: black">
                    Interest Payable :
                    <span style="font-weight: 500" id="ansInt"></span>
                  </h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer text-center"></footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
  </div>
  <script src="/extra js/loan-calculator.js"></script>
  <script>
    calculateResult();

    function displayMonthly() {
      document.getElementById("displayFD").innerHTML =
        document.getElementById("fixed_deposit").value;

      calculateResult();
    }

    function displayRate() {
      document.getElementById("displayRate").innerHTML =
        document.getElementById("return_rate").value;

      calculateResult();
    }

    function displayTenure() {
      document.getElementById("displayTenure").innerHTML =
        document.getElementById("tenure").value;

      calculateResult();
    }
  </script>
  <%- include("layouts/footer") -%>
</body>

<!-- P x R x (1+R)^N / [(1+R)^N-1] -->
